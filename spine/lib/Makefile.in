INSTALL = @INSTALL@

pythondir = @PYTHONDIR@/Cerebrum/spine

sources = $(wildcard *.py)

.PHONY: all install install-lib clean distclean print

all: 
	$(MAKE) -C SpineLib $@
	$(MAKE) -C server $@
	$(MAKE) -C cerebrum $@

install: install-lib
	$(MAKE) -C SpineLib $@
	$(MAKE) -C server $@
	$(MAKE) -C cerebrum $@

install-lib: $(sources)
	$(INSTALL) -d $(DESTDIR)/$(pythondir)
	$(INSTALL) -v -m 644 $(sources) $(DESTDIR)/$(pythondir)
	touch $(DESTDIR)/$(pythondir)/__init__.py
	chmod 644 $(DESTDIR)/$(pythondir)/__init__.py

clean:
	rm -f *~ 
	$(MAKE) -C SpineLib $@
	$(MAKE) -C server $@
	$(MAKE) -C cerebrum $@

distclean: clean
	rm -f Makefile
	$(MAKE) -C SpineLib $@
	$(MAKE) -C server $@
	$(MAKE) -C cerebrum $@
