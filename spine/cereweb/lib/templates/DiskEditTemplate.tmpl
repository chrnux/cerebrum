## Creates the form for editing the main disk info.
#def form($disk)
<div class="view">
#set $diskname = $spine_to_web($disk.get_name())
<h3>$_('Edit ') + $object_link($disk, text=$diskname) + $_(':')</h3>
    <form action="$getAction()" method="post">
        <div class="hidden">
            <input type="hidden" name="id" value="$html_quote($disk.get_id())" />
        </div>
        <div class="required">
            $form_widgets.input("path", "Path", $spine_to_web($disk.get_path()))
        </div>
        <div class="required">
            $form_widgets.input("description", "Description", $spine_to_web($disk.get_description()))
        </div>
        $form_widgets.showHelp($help)
        <div class="buttons">
            <input type="submit" value="$_('Save')" name="submit" />
            <input type="submit" value="$_('Cancel')" name="submit" />
        </div>
    </form>
</div>
#end def

