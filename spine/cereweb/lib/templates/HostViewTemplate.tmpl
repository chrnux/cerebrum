## View information about host (name and description).
#def viewInfo($host)
#set $info = []
$info.append(($_("Name"), $host.get_name()))
$info.append(($_("Description"), $host.get_description()))
$widgets.viewInfo($info)
#end def

#def viewDisks($host)
#set $disks = $host.get_disks()
#if $disks
<div class="list box">
    <h3>$_('Disks')</h3>
    <form action="disks" method="POST">
        <input type="hidden" name="host" value="$host.get_id()" />
        #for $disk in $disks
        <div class="item">
            <input type="checkbox" name="$disk.get_id()" />
            <em>$_('Path'):</em> $disk.get_path()
            $object_link($disk, "view", _class="action")
            $object_link($disk, "edit", "edit", _class="action")
            $remember_link($disk, _class="action")
        </div>
        #end for
        #if $disks
        <input type="submit" name="delete" value="$_('Delete disks')" />&nbsp;
        #end if
        <input type="submit" name="add" value="$_('Add a disk')" />
    </form>
</div>
#end if
#end def

