$info.append(($_('Date created'), $strftime($account.get_create_date())))
$info.append(($_('Created by'), $object_link($account.get_creator())))
#if $account.is_posix()
    $info.append(($_('UID'), $account.get_posix_uid()))
    $info.append(($_('Primary group'), $object_link($account.get_primary_group())))
    $info.append(($_('Gecos'), $account.get_gecos()))
    $info.append(($_('Shell'), $account.get_shell().get_name()))
#end if
$info.append(($_('Description'), $account.get_description()))
$widgets.viewInfo($info)
#end def

