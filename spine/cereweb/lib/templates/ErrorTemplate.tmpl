## Displays an error page.
#def error($req, $title, $message, $path="", $traceback="", $report=True)
    #set $referer = ""
    #if not $req.session
        #set $user = ''
    #else
        #set $user = $req.session.get('username')
    #end if
    <html>
        <head>
            <title>Cereweb error</title>
            <link rel="stylesheet" type="text/css" href="$url('css/style.css')" />
            <script language="JavaScript" src="$url('jscript/base.js')"></script>
            <script language="JavaScript" src="$url('jscript/error.js')"></script>
        </head>
        <body>
            <div class="errorpage">
                <div class="title">
                    $title
                </div>
                <div class="message">
                    <b>$_('Error message'):</b><br />
                    $message
                </div>
                <div class="contact">
                    <b>$_('Contact information'):</b><br />
                    insert contant info here</br>
                    <a href="mailto:orakel@ntnu.no?subject='Cereweb error'">orakel@ntnu.no</a>
                </div>
                <div class="bottom">
                    <div class="actions">
                        <b>$_('Actions'):</b>
                        <a href="javascript:Err_retry();" id="retry">retry</a>
                        <a href="javascript:Err_back();" id="back">back</a>
                        <a href="$url('login')?username=$user" id="login">login</a>
                        #if $report
                        <a href="javascript:Err_show_report();" id="show_report">report</a>
                        #end if
                        #if $traceback
                        <a href="javascript:Err_show_traceback();" id="show_traceback">show traceback</a>
                        #end if
                    </div>
                    #if $report
                    <div id="report_div" class="report" style="display:none;">
                        <b>$_('Report the error'):</b><br />
                        <form action="$url('error/report')" method="POST">
                            #if $user
                            $_('Name'): <em>$user</em><br />
                            #end if
                            #if $path
                            $_('Path'): <a href="$url($path)">/$path</a><br />
                            <input type="hidden" name="path" value="$path">
                            #end if
                            #if $referer
                            $_('Referer path'): <a href="$url($referer)">/$referer</a><br />
                            <input type="hidden" name="referer" value="$referer">
                            #end if
                            #if traceback
                            <input type="hidden" name="traceback" value='$traceback.replace("'", '"')'>
                            #end if
                            <input type="hidden" name="title" value="$title">
                            <input type="hidden" name="message" value="$message">
                            <input type="hidden" name="name" value="$user">
                            <label for="explanation">$_('Explain how this error occured'):</label>
                            <br />
                            <textarea cols="40" rows="4" name="explanation"></textarea>
                            <br />
                            <input type="submit" value="$_('Save')" />&nbsp;
                            <input type="reset" value="$_('Clear')" />
                        </form>
                    </div>
                    #end if
                    #if $traceback
                    <div id="traceback_div" class="traceback" style="display:none;">
                        <b>$_('Traceback'):</b><br />
                        <pre>$traceback</pre>
                    </div>
                    #end if
                </div>
            </div>
        </body>
    </html>
#end def

