#def quarantine_form($entity, $action, $types = None)
<div class="quarantine box">
<form action="$action" method="POST">
    #set $why = $formvalues.get('why')
    #set $type = $formvalues.get('type')
    #set $start = $formvalues.get('start')
    #set $end = $formvalues.get('end')
    #set $disable_until = $formvalues.get('disable_until')
    <table cellpadding="3" linespacing="3">
        <tr>
            <th align="right">$_('Quarantine type'):</th>
            <td colspan="2">
            #if $types:
                $form_widgets.generate_option("type", $types, $type)
            #else:
                $type
                <input type=hidden name="type" value="$type" />
            #end if
            </td>
        </tr>
        <tr>
            <th align="right" valign="top">$_('Description'):</th>
            <td colspan="2">
                <textarea name="why" rows="5" cols="40">$why</textarea>
            </td>
        </tr>
        <tr>
            <th align="right">$_('Start date'):</th>
            <td>
                <input type="text" name="start" value="$start" size="10" />
            </td>
            <td><i>(Format: yyyy-mm-dd)</i></td>
        </tr>
        <tr>
            <th align="right">$_('End date'):</th>
            <td>
                <input type="text" name="end" value="$end" size="10" />
            </td>
            <td><i>(Format: yyyy-mm-dd)</i></td>
        </tr>
        <tr>
            <th align="right">$_('Disable until'):</th>
            <td>
                <input type="text" name="disable_until" value="$disable_until" size="10" />
            </td>
            <td><i>(Format: yyyy-mm-dd)</i></td>
        </tr>
        <tr>
            <td colspan="3" align="center">
                <input type="submit" value="$_('Save')" name="submit" />
                <input type="submit" value="$_('Cancel')" name="submit" />
            </td>
        </tr>
    </table>
    <input type=hidden name="entity" value="$entity.get_id()" />
</form>
</div>
#end def

