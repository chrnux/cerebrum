        <em> $_('End'):</em>
        <span class="date"> $strftime($end)</span>
        #end if
        #if $until
        <em> $_('Disable until'):</em>
        <span class="date"> $strftime($until)</span>
        #end if
    </div>
    #end for
</div>
#end if
