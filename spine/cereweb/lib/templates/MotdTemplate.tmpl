#def actions()
<div id="actions">
    <h3>Actions</h3>
    <ul>
        <li><a class="action" href="/all_motds">$_('View all messages')</a></li>
        <li><a class="action" href="/edit_motd">$_('Create a new message')</a></li>
    </ul>
</div>
#end def

#def content()
<div class="view_content">
    <div id="motds">
    #for $motd in $motds
        #set $id = $url_quote($motd.get_id())
        #set $subject = $motd.get_subject()
        #set $message = $motd.get_message()
        <div class="motd box">
            <div class="actions">
                <a class="action" href="/edit_motd?id=$id">$_('edit')</a>
                <a class="action" href="/delete_motd?id=$id">$_('delete')</a>
            </div>
            <div class="subject">$spine_to_web($tr, $subject)</div>
            $spine_to_web($tr, $message).replace('\n', '<br />')
            <br />
            <span class="by">-$_('by')$spine_to_web($tr, $motd.get_creator().get_name())</span>
            <span class="when">
                $html_quote($strftime($motd.get_create_date(), '%y-%m-%d  %H:%M'))
            </span>
        </div>
    #end for
    </div>
    $editMotd('/save_motd')
</div>
#end def

#def editMotd($action, $id="", $subject="", $message="", $main=False)
#if not $main
<div class="motd box" id="editMotd">
#else
<div class="motd box">
#end if
    <div class="bd">
        <form name="editMotdForm" action="$action" method="post">
            <div>
                <label for="subject">$_('Subject'):</label>
                <input type="text" class="text" id="editMotdForm_subject" name="subject" value="$spine_to_web($tr, $subject)" />
            </div>
            <div>
                <label for="message">$_('Message'):</label>
                <textarea id="editMotdForm_message" rows="3" cols="48" name="message">$spine_to_web($tr, $message)</textarea>
            </div>
            <div>
                <input type="hidden" id="editMotdForm_id" name="id" value="$html_quote($id)" />
            </div>
            #if $main
            <div>
                <input type="submit" value="$_('Save')" />&#x0020;
                <input type="reset" value="$_('Reset')" />
            </div>
            #end if
        </form>
    </div>
</div>
#end def

