#from lib.Main import Main
#extends Main

#attr $form_widgets = FormWidgets()
#attr $motds = []

#def actions()
<div id="actions">
    <h3>Actions</h3>
    <ul>
        <li><a class="action" href="/motd/all">$_('View all messages')</a></li>
        <li><a class="action" href="/motd/edit">$_('Create a new message')</a></li>
    </ul>
</div>
#end def

#def content()
<div class="view_content">
    <div id="motds">
    #for $motd in $motds
        <div class="motd box">
            <div class="actions">
                <a class="action" href="/motd/edit?id=$motd.id">$_('edit')</a>
                <a class="action" href="/motd/delete?id=$motd.id">$_('delete')</a>
            </div>
            <div class="subject">$spine_to_web($motd.subject)</div>
            $spine_to_web($motd.message).replace('\n', '<br />')
            <br />
            <span class="by">-$_('by') $spine_to_web($motd.creator.name)</span>
            <span class="when">
                $quotetimestamp($motd.create_date)
            </span>
        </div>
    #end for
    </div>
    $editMotd('/motd/save')
</div>
#end def

#def editMotd($action, $id="", $subject="", $message="", $main=False)
#if not $main
<div class="motd box" id="editMotd">
#else
<div class="motd box">
#end if
    <div class="bd">
        <form name="editMotdForm" action="$action" method="post">
            <div>
                <label for="subject">$_('Subject'):</label>
                <input type="text" class="text" id="editMotdForm_subject" name="subject" value="$spine_to_web($subject)" />
            </div>
            <div>
                <label for="message">$_('Message'):</label>
                <textarea id="editMotdForm_message" rows="3" cols="48" name="message">$spine_to_web($message)</textarea>
            </div>
            <div>
                <input type="hidden" id="editMotdForm_id" name="id" value="$html_quote($id)" />
            </div>
            #if $main
            <div>
                <input type="submit" value="$_('Save')" />&#x0020;
                <input type="reset" value="$_('Reset')" />
            </div>
            #end if
        </form>
    </div>
</div>
#end def

