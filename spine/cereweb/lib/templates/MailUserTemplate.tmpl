#def createVacation()
#set $start = $strftime('%Y-%m-%d', gmtime())
#set $end = ''
#set $alias = ''
<div class="edit box" >
    <h3>$_('Add a vacation')</h3>
        <form action="/user_client/add_vacation" method="post">
            <div class="hidden">
                <input type="hidden" name="username" value="$account['username']" />
            </div>
            <div class="required">
                $form_widgets.input("start", "Start", $start)
            </div>
            <div class="required">
                $form_widgets.input("end", "End", $end)
            </div>
            <div class="required">
                $form_widgets.input("alias", "Alias", $alias)
            </div>
            <div class="buttons">
                <input type="submit" name="create" value="$_('Create')" />&nbsp;
                <input type="button" class="cancel" value="$_('Cancel')" />
            </div>
        </p>
        </form>
</div>
#end def

#def createMailForward()
#set $start = $strftime('%Y-%m-%d', gmtime())
#set $end = ''
#set $forward = ''
<div class="edit box" >
    <h3>$_('Add a forward')</h3>
        <form action="/user_client/add_forward" method="post">
            <div class="hidden">
                <input type="hidden" name="username" value="$account['username']" />
            </div>
            <div class="required">
                $form_widgets.input("start", "Start", $start)
            </div>
            <div class="required">
                $form_widgets.input("end", "End", $end)
            </div>
            <div class="required">
                $form_widgets.input("forward", "Forward", $forward)
            </div>
            <div class="buttons">
                <input type="submit" name="create" value="$_('Create')" />&nbsp;
                <input type="button" class="cancel" value="$_('Cancel')" />
            </div>
        </p>
        </form>
</div>
#end def

#def content()
<div id="actions"><h3>Actions</h3></div>
<div class="view_content">
    $viewInfo($account)
    $viewVacation($account, $vacations)
    $viewMailForward($forwards)
    $createVacation()
    $createMailForward()
</div>
#end def
