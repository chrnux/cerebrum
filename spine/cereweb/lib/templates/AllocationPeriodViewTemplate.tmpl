## Main method for creating the allocationperiod view page.
#def view($transaction, $allocationperiod)
#set $id = $allocationperiod.get_id()
<div class="view_content">

    ## Actions
    <div class="view_actions">
        <h4>$_('Actions')</h4>
        <div class="actions">
            <a href="edit?id=$id">$_("edit info")</a><br />
            <a href="delete?id=$id">$_("delete allocationperiod")</a><br />
            <a href="#note" id="note_add">$_('add note')</a><br />
            <a href="/entity/full_historylog?id=$id">$_('view full history log')</a>
            <br />
            $remember_link($allocationperiod)<br />
        </div>
    </div>

    ## Content
    $viewInfo($allocationperiod)
    ##$addNote($allocationperiod)
    ##$viewNotes($allocationperiod)
    $viewHistoryLog($allocationperiod)

    ## Register divs and links to flip visibility.
    <script language="JavaScript">
        <!--
        FV_register('note_form', 'note_add', null, 'note_cancel');
        //-->
    </script>
</div>
#end def

## View information about host (name and description).
#def viewInfo($allocationperiod)
<div class="view_info box">
    <div class="item"><em>$_("AllocationAuthority"):</em> $allocationperiod.get_authority().get_name()</div>
    <div class="item"><em>$_("Name"):</em> $allocationperiod.get_name()</div>
    <div class="item"><em>$_("Start Date"):</em> $allocationperiod.get_startdate().strftime("%Y-%m-%d")</div>
    <div class="item"><em>$_("End Date"):</em> $allocationperiod.get_enddate().strftime("%Y-%m-%d")</div>
</div>
#end def

