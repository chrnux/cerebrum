## Main method for creating the host view page.
#def view($transaction, $host)
#set $id = $host.get_id()
<div class="view_content">

    ## Actions
    <div class="view_actions">
        <h4>$_('Actions')</h4>
        <div class="actions">
            <a href="edit?id=$id">$_("edit info")</a><br />
            <a href="delete?id=$id">$_("delete host")</a><br />
            <a href="#note" id="note_add">$_('add note')</a><br />
            <a href="/entity/full_historylog?id=$id">$_('view full history log')</a>
            <br />
            $remember_link($host)<br />
        </div>
    </div>

    ## Content
    $viewInfo($host)
    $addNote($host)
    $viewNotes($host)
    $viewDisks($host)
    $viewHistoryLog($host)

    ## Register divs and links to flip visibility.
    <script language="JavaScript">
        <!--
        FV_register('note_form', 'note_add', null, 'note_cancel');
        //-->
    </script>
</div>
#end def

## View information about host (name and description).
#def viewInfo($host)
<div class="view_info">
    <div class="info"><em>$_("Name"):</em> $host.get_name()</div>
    <div class="info"><em>$_("Description"):</em> $host.get_description()</div>
    #if host.is_machine()
        <div class="info"><em>$_("Cpu arch"):</em>$host.get_cpu_arch().get_description()</div>
        <div class="info"><em>$_("Operating system"):</em>$host.get_operating_system().get_description()</div>
        <div class="info"><em>$_("Interconnect"):</em>$host.get_interconnect().get_description()</div>
    #end if
    <div class="info"><em>$_("Total memory"):</em>$host.get_total_memory()</div>
    <div class="info"><em>$_("Node number"):</em>$host.get_node_number()</div>
    <div class="info"><em>$_("Node memory"):</em>$host.get_node_memory()</div>
    <div class="info"><em>$_("Node disk"):</em>$host.get_node_disk()</div>
    <div class="info"><em>$_("Cpu core number"):</em>$host.get_cpu_core_number()</div>
    <div class="info"><em>$_("Cpu core mflops"):</em>$host.get_cpu_core_mflops()</div>
    <div class="info"><em>$_("Cpu MHz"):</em>$host.get_cpu_mhz()</div>
</div>
#end def

