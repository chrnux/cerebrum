## The main method for creating the form for the allocation period create page.
#def form($authorities)
#set $fv = $formvalues
$form_widgets.generate_loption("authority", "Allocation Authority",
                               $authorities, $fv.get("authority", "notur"))
<div class="view">
    <form action="$getAction()" method="post">
        <div class="required">
            $form_widgets.input("name", "Name", $fv.get("name", ""))
        </div>
        <div class="required">
            $form_widgets.input("startdate", "Start Date *", $fv.get("startdate", ""))
        </div>
        <div class="required">
            $form_widgets.input("enddate", "End Date *", $fv.get("enddate", ""))
        </div>
        ## showHelp creates it's own surrounding div.
        $form_widgets.showHelp($help)
        <div class="buttons">
            <input type="submit" value="$_('Create')" />&#x0020;
            <input type="reset" value="$_('Clear')" />
        </div>
    </form>
</div>
#end def

