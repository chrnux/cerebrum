## Main method for creating the view of accounts.
#def viewAccount($transaction, $account)
    $viewAccountInfo($account)
    $view_entity($account, $transaction)
#end def

## Shows info about the account.
#def viewAccountInfo($account)
<h2>$_("Account") $account.get_name():</h2>
<div class="accountinfo">
    <dl>
        <dt>$_("Date created")</dt>
        <dd>$view_date($account.get_create_date())</dd>

        <dt>$_("Expire date")</dt>
        <dd>$view_date($account.get_expire_date())</dd>

        <dt>$_("Created by")</dt>
        <dd>$object_link($account.get_creator())</dd>

        <dt>$_("Owned by")</dt>
        <dd>$object_link($account.get_owner())</dd>

#if $account.is_posix()
        <dt>$_("UID")</dt>
        <dd>$account.get_posix_uid()</dd>

        <dt>$_("Primary group")</dt>
        <dd>$object_link($account.get_primary_group())</dd>

        <dt>$_("Gecos")</dt>
        <dd>$account.get_gecos()</dd>

        <dt>$_("Shell")</dt>
        <dd>$account.get_shell().get_name()</dd>
#end if

    </dl>
</div>
<div class="actions">
    #set link1 = $url("account/edit?id=%s" % $account.get_id())
    #set link3 = $url("account/delete?id=%s" % $account.get_id())
    <a href="$link1">$_("Edit")</a>
    #if $account.is_posix()
        #set link2 = $url("account/posix_demote?id=%s&" % $account.get_id())
        <a href="$link2">$_("Demote from Posix")</a>
    #else
        #set link2 = $url("account/edit?id=%s&promote=posix" % $account.get_id())
        <a href="$link2">$_("Promote to Posix")</a>
    #end if
    <a href="$link3">$_("Remove")</a>
    $remember_link($account)
</div>
#end def

