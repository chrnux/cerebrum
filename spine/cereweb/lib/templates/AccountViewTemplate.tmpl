#extends EntityViewTemplate
#from Cereweb.utils import url, object_link, view_date, view_spreads

## Main method for creating the view of accounts.
#def viewAccount($req, $account)
    $viewAccountInfo($account)
    $view_entity($account, $req)
#end def

## Shows info about the account.
#def viewAccountInfo($account)
<h2>$_("Account") $account.get_name():</h2>
<div class="accountinfo">
    <dl>
        <dt>$_("Date created")</dt>
        <dd>$view_date($account.get_create_date())</dd>

        <dt>$_("Expire date")</dt>
        <dd>$view_date($account.get_expire_date())</dd>

        <dt>$_("Created by")</dt>
        <dd>$object_link($account.get_creator())</dd>

        <dt>$_("Owned by")</dt>
        <dd>$object_link($account.get_owner())</dd>

        <dt>$_("Spreads")</dt>
        <dd>$view_spreads($account.get_spreads())</dd>
    </dl>
</div>
<div class="actions">
    #set link = $url("account/edit?id=%s" % $account.get_id())
    #set link2 = $url("account/delete?id=%s" % $account.get_id())
    <a href="$link">$_("Edit account")</a><a href="$link2">$_("Remove account")</a>
</div>
#end def

