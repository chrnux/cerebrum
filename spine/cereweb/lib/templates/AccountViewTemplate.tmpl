                    <td>$spine_to_web($affil.priority)</td>
                    <td class="actions">
                        #set $args = "account_id=%s&amp;ou_id=%s&amp;affil_id=%s" % (
                            $account.id,
                            $affil.ou.id,
                            $url_quote($affil.id))
                        <a class="action" href="/confirm/account/remove_affil?$args">$_('delete')</a>
                    </td>
                </tr>
            #end for
        </table>
    </div>
    #end if
#end def

