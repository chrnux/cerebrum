<div style="clear:both;"></div>
</div>
#end def

#def viewInfo($account)
#set $info = []
$info.append(($_('Name'), $account.get_name()))
$info.append(($_('Owned by'), $object_link($account.get_owner())))
$info.append(($_('Expire date'), $strftime($account.get_expire_date())))
$info.append(($_('Date created'), $strftime($account.get_create_date())))
$info.append(($_('Created by'), $object_link($account.get_creator())))
#if $account.is_posix()
    $info.append(($_('UID'), $account.get_posix_uid()))
    $info.append(($_('Primary group'), $object_link($account.get_primary_group())))
    $info.append(($_('Gecos'), $account.get_gecos()))
    $info.append(($_('Shell'), $account.get_shell().get_name()))
#end if
$info.append(($_('Description'), $account.get_description()))
$widgets.viewInfo($info)
#end def

#def viewPasswords($account)
#set $auths = $account.get_authentications()
#if $auths
<div class="info box">
    <h3>$_('Current authentication types')</h3>
    #for $auth in $auths
    <div class="item">
        $auth.get_method().get_name()
    </div>
    #end for
</div>
#end if
#end def

#def setPassword($account)
<div class="form box" id="pass_form" style="display:none;">
    <a class="anchor" name="password"></a>
    <h3>$_('Set Password')</h3>
    $form_widgets.changePassword($account.get_id())
</div>
#end def

#def viewGroups($account)
<div class="info box">
    <h3>$_('Groups')</h3>
    <form action="groups" method="POST">
        <input type="hidden" name="account_id" value="$account.get_id()" />
        $listGroups($account)
        #if not $account.get_groups()
        $_('Account is not member of any groups')<br />
        #else
        <input type="submit" name="leave" value="$_('Leave group(s)')" />&nbsp;
        #end if
        <input type="submit" name="create" value="$_('Create a group')" />
    </form>
</div>
#end def

