## The main method for creating the form for the person create page.
#def form($genders)
#set $fv = $formvalues
<div class="create">
	<table>
	<tr>
		<th>
			$_('Create a new person')
		</th>
	</tr>
	<tr>
		<td>
			<div class="createform">
			<form action="$getAction()" method="post">
			<table>
				<tr>
					$form_widgets.td2input("firstname", "First name", $fv.get("name", ""))
				</tr>
				<tr>
					$form_widgets.td2input("lastname", "Last name", $fv.get("name", ""))
				</tr>
				<tr>
						$form_widgets.generate_td2loption("gender", "Gender",
                			$genders, $fv.get("gender", ""))
				</tr>
				<tr>
            			$form_widgets.td2input("birthdate", "Birthdate *", $fv.get("birthdate", ""))
				</tr>
				<tr>
            			$form_widgets.td2input("description", "Description", $fv.get("description", ""))
				</tr>
				<tr>
				<td colspan="2">
        			$form_widgets.showHelp($help)
				</td>
				</tr>
				<tr>
					<td colspan="2">
						<div>
							<center>
								<input type="submit" value="$_('Create')" />&nbsp;
								<input type="reset" value="$_('Clear')" />
							</center>
						</div>
					</td>
				</tr>
			</table>
    	</form>
		</div>
		</td>
	</tr>
	</table>
</div>
