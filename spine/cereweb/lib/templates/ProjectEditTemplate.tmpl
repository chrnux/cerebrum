#from lib.InitTemplate import InitTemplate
#extends InitTemplate

#from FormWidgets import FormWidgets
#attr $form_widgets = FormWidgets()

## Lines with info about the form, used with the function showHelp().
#attr $help = ["* Optional"]

## Creates the content on the project edit page.
#def editProject($project,$transaction)
<div class="person">
    $form($project,$transaction)
</div>
#end def

## Action to go to when the form is submitted.
#def getAction
    #return '/project/save'
#end def

## Creates the form for editing the main project info.
#def form($project,$transaction)
<div class="view">
    <form action="$getAction()" method="post">
        <div class="hidden">
            <input type="hidden" name="id" value="$project.get_id()" />
        </div>
        <div class="required">
            $form_widgets.input("title", "Title", $project.get_title())
        </div>
        <div class="required">
            $form_widgets.input("description", "Description", $project.get_description())
        </div>
        <div class="required">
            $form_widgets.code_selector("science","Science",$transaction.get_science_searcher(),$project.get_science().get_name())
        </div>
        $form_widgets.showHelp($help)
        <div class="buttons">
            <input type="submit" value="$_('Save')" name="submit" />
            <input type="submit" value="$_('Cancel')" name="submit" />
        </div>
    </form>
</div>
#end def
