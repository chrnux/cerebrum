#import cherrypy
#from lib.InitTemplate import InitTemplate
#from lib.utils import format_title
#extends InitTemplate
#implements respond
##
#attr $title = "Cereweb"
#attr $messages = []
#attr $jscripts = []
##
## Setting wl to False prevents loading of the worklist.js
## Used in UserTemplate since regular users don't need it.
#attr $wl = True
## Content is usually replaced with a lambda function from the view.
#def content: stub
## Menu is the side menu.
#def menu: stub
## The worklist is in general a list of objects the user is working on.
## Should be specific to the current active transaction, when finished.
#def worklist: stub
## The activitylog is a log over what the user has done, like adding a member
## to a group. Should be specific to the current active transaction, when
## finished.
#def activitylog: stub
##
<!DOCTYPE
 html PUBLIC "-//W3C//DTD XHTML 1.1//EN"
 "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
    <head>
        <title>Cereweb $format_title($title)</title>
        <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
        <meta http-equiv="Pragma" content="no-cache" />
        <meta http-equiv="Cache-Control" content="max-age=0" />

        <link rel="stylesheet" type="text/css" href="/css/fixed.css"/>
        <!--[if IE]>
        <link rel="stylesheet" type="text/css" href="/css/fixed_ie5.css"/>
        <![endif]-->
        <link rel="stylesheet" type="text/css" href="/css/default.css"/>
        <link rel="stylesheet" type="text/css" href="/css/style.css"/>

        <!-- Include yui assets -->
        <link rel="stylesheet" type="text/css" href="/css/yui/container.css"/>

        <!-- Include yui components -->
        <script type="text/javascript" src="/jscript/yui/yahoo-dom-event.js"></script>
        <script type="text/javascript" src="/jscript/yui/connection.js"></script>
        <script type="text/javascript" src="/jscript/yui/logger.js"></script>
        <script type="text/javascript" src="/jscript/yui/container.js"></script>

        <!-- Include our javascript application -->
        <script type="text/javascript" src="/jscript/base.js"></script>
        <script type="text/javascript" src="/jscript/timeout.js"></script>
        #if $wl
        <script type="text/javascript" src="/jscript/worklist.js"></script>
        #end if
        #block jscript_block:
        #for $i in $jscripts
        <script type="text/javascript" src="/jscript/$i"></script>
        #end for
    </head>
    <body>
        <div id="maindiv">
            <div id="content" class="page_content">
                <div class="session_warning" id="session_warning" style="display:none;">
                    <b>Session warning:</b>
                </div>
                <div class="title">
                    <h1>$title</h1>
                </div>
                <div class="messages">
                    #for $message, $is_error in $messages
                    #set $error = $is_error and " error" or ""
                    <span class="message$error">$message</span><br />
                    #end for
                </div>
                #block content_block
                    $content()
                #end block
                <div style="clear: both;"></div>
            </div>
            <div id="menu" class="page_menu">
                <div class="menu_header">
                    <a href="/index">Cereweb</a>
            </div>
            #block menu_block
                $menu()
            #end block
        </div>
        <div id="bottom" class="page_bottom">
            #block page_bottom
                #set $wl = $cherrypy.session['options'].getboolean('layout', 'display worklist')
                #set $al = $cherrypy.session['options'].getboolean('layout', 'display activitylog')
                    
                #if $wl or $al
                    <div class="bottom_div">
                    #if $wl
                        #block worklist_block
                            $worklist()
                        #end block
                    #end if
                    #if $al
                        #block activitylog_block
                            $activitylog()
                        #end block
                    #end if
                    </div>
                #end if
            #end block page_bottom
            </div>
            <div style="clear: both;"></div>
        </div>
        <div id="timeOutDialog"></div>
    </body>
</html>
