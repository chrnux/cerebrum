#def viewHistoryLog($entity)
    <div class="log box">
        <h3><a href="/entity/full_historylog?id=$entity.id">$_('History log')</a></h3>
        <table>
            <thead>
                <tr>
                    <th>Timestamp</th>
                    <th>Type</th>
                    <th>Changed by</th> 
                    <th>Category</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                #for $event in $entity.history
                    <tr>
                        <td>$quotetimestamp($event.timestamp)</td>
                        <td class="type $event.type"><span>$event.type</span></td>
                        <td>
                            #if $hasattr($event.creator, 'id')
                                $entity_link($event.creator)
                            #else
                                $event.creator
                            #end if
                        </td>
                        <td>$event.category</td>
                        <td>$event.message</td>
                    </tr>
                #end for
            </tbody>
        </table>
    </div>
#end def
