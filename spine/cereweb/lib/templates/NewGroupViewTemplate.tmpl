    #if $group.is_expired
        $notice.append($_("This group has expired."))
    #end if

    #if $group.is_posix
        $info.append(($_('Gid'), $html_quote($group.posix_gid)))
    #end if

    $info.append(($_('Created'), $html_quote($strftime($group.create_date))))
    $info.append(($_('Expire date'), $html_quote($strftime($group.expire_date))))
