#from FormWidgets import FormWidgets
#attr $form_widgets = FormWidgets()

#attr $help = ["* Expire date: YYYY-MM-DD"]

## Creates the form for creating a new group.
#def form($name, $expire, $description)
<div class="create">
    <form action="make" method="POST">
        <div class="createform">
            $form_widgets.input("name", "Name", $name)
            <label for="description">$_('Description'):</label>
            <textarea rows="3" cols="40" name="description">$description</textarea>
            <br />
            $form_widgets.input("expire", "Expire date *", $expire)
        </div>
        $form_widgets.showHelp($help)
        <div>
            <center>
                <input type="submit" value="$_('Create')" />&nbsp;
                <input type="reset" value="$_('Clear')" />
            </center>
        </div>
    </form>
</div>
#end def

