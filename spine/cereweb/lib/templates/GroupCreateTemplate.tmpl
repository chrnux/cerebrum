## Creates html-code for input-boxes for the form.
#def input($name, $label, $value)
    <label for="$name">$_($label):</label>
    <input type="text" name="$name" id="$name" value="$value" /><br />
#end def

## Creates the form for creating a new group.
#def form($name, $expire, $description)
<div class="create">
    <div class="subtitle">
        <h3>$_("General groupinfo"):</h3>
    </div>
    <form action="make" method="POST">
        <div class="createform">
            $input("name", "Name", $name)
            <label for="description">$_('Description'):</label>
            <textarea rows="3" cols="40" name="description">$description</textarea>
            <br />
            $input("expire", "Expiration date *", $expire)
        </div>
        <div>
            <center>
                <input type="submit" value="$_('Create')" />&nbsp;
                <input type="reset" value="$_('Clear')" />
            </center>
        </div>
    </form>
    <div class="subtitle">
        <h3>$_("Posix groupinfo")</h3>
    </div>
</div>
#end def

