## Login template
#from FormWidgets import FormWidgets
#attr $form_widgets = FormWidgets()


#def login($username, $messages)
<?xml version='1.0' ?>
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"><html lang="en">
<head>
    <title>Log in to Cereweb</title>

	<link rel="stylesheet" type="text/css" media="screen" href="css/login.css" />
	
</head>
<body>
    <div class="content">
		<table class="frametable" width="750">
		<tr>
			<td>
            	<h1 class="heading1" >Log in to Cereweb</h1>
			</td>
		</tr>
		<tr>
			<td>
				&nbsp;
			</td>
		</tr>
		<tr>
			<td align="center">
        	<form method="POST">
				<table class="logintable" width="300">
					<tr>
						<td class="errortd" colspan="2">
							#if messages:
        						#for $msg in $messages
            						<p>$msg</p>
        						#end for
							#else
								&nbsp;
							#end if
						</td>
					</tr>
					<tr>
						#set $tdattrs={'align': {'left': 'right','right' :'left'}}
            			$form_widgets.td2input("username","Username",$username,"", "text", $tdattrs )
					</tr>
					<tr>
            			$form_widgets.td2password('password', 'Password', "", "", $tdattrs )
					</tr>
					<tr>
						<td colspan="2">
							&nbsp;
						</td>
					</tr>
					<tr>
						<td colspan="2" align="center">
          					<input type="submit" value="Login" />
						</td>
					</tr>
					<tr>
						<td colspan="2">
							&nbsp;
						</td>
					</tr>
				</table>
        	</form>
		</td>
	</tr>
	<tr>
		<td>
			&nbsp;
			<br>
			<br>
			<br>
			<br>
		</td>
	</tr>
	</table>
    </div>
</body>
</html>
#end def
