<div class="view">
    <form action="$getAction()" method="post">
        <div class="hidden">
            <input type="hidden" name="id" value="$person.get_id()" />
        </div>
        <div class="required">
            $form_widgets.generate_loption("gender",  "Gender",
                       $genders, $person.get_gender().get_name())
        </div>
        <div class="required">
            $form_widgets.input("birthdate", "Birthdate *", $date)
        </div>
        <div class="required">
            $form_widgets.input("description", "Description", $person.get_description())
        </div>
        <div class="optional">
            $form_widgets.input("deceased", "Deceased date *", $deceased)
        </div>
        $form_widgets.showHelp($help)
        <div class="buttons">
            <input type="submit" value="$_('Save')" name="submit" />
            <input type="submit" value="$_('Cancel')" name="submit" />
        </div>
    </form>
</div>
#end def
