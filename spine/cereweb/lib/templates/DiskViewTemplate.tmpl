#extends EntityViewTemplate
#from lib.utils import object_link
#from lib.WorkList import remember_link

#def view($transaction, $disk)
#set $id = $disk.get_id()
<div class="view_content">

    ## Actions
    <div class="view_actions">
        <h4>$_('Actions')</h4>
        <div class="actions">
            <a href="edit?id=$id">$_("edit info")</a><br />
            <a href="delete?id=$id">$_("delete disk")</a><br />
            <a href="#note" id="note_add">$_('add note')</a><br />
            <a href="/entity/full_historylog?id=$id">$_('view full history log')</a>
            <br />
            $remember_link($disk)<br />
        </div>
    </div>

    ## Content
    $viewInfo($disk)
    $addNote($disk)
    $viewNotes($disk)
    $viewHistoryLog($disk)

    ## Register divs and links to flip visibility.
    <script language="JavaScript">
        <!--
        FV_register('note_form', 'note_add', null, 'note_cancel');
        //-->
    </script>
</div>
#end def

#def viewInfo($disk)
<div class="view_info">
    <div class="info">
        <em>$_('Host'):</em> $object_link($disk.get_host())
    </div>
    <div class="info">
        <em>$_('Path'):</em> $disk.get_path()
    </div>
    <div class="info">
        <em>$_('Description'):</em> $disk.get_description()
    </div>
</div>
#end def

