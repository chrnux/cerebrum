## View information about person, like birthdate and gender.
#def personInfo($person)
<div class="viewinfo">
    <div class="subtitle">
        <h3>$_("General personinfo"):</h3>
    </div>
    <div>
    #if $person.get_deceased()
        <div class="info">
            <strong class="deceased">$_("Person is deceased")</strong>
        </div>
    #end if
        <div class="info">
            <em>$_("Gender"):</em> $person.get_gender().get_description()
        </div>
        #set $dob = $person.get_birth_date().strftime("%Y-%m-%d")
        <div class="info"><em>$_("Date of birth"):</em> $dob</div>
        <div class="info"><em>$_("Description"):</em> $person.get_description()</div>
    </div>
    <div class="actions">
        #set $edit = $url("person/edit?id=%s" % $person.get_id())
        #set $delete = $url("person/delete?id=%s" % $person.get_id())
        <a href="$edit">$_("edit person")</a>
        <a href="$delete">$_("delete person")</a>
        $remember_link($person)
    </div>
</div>
#end def

