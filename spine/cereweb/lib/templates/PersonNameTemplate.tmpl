#def view($person)
#set $names = $person.get_names()
#if $names
<div class="personnames">
    <h3>$_('Names')</h3>
    #for $name in $names
    #set $ss = $name.get_source_system()
    #if not $ss.get_name() == 'Cached'
    <div class="name">
        #set $name_variant = $name.get_name_variant()
        #set $ss_name = $ss and $ss.get_name() or ''
        <div class="actions_right">
            #set $delete = 'remove_name?id=%i&variant=%s&ss=%s' % (
                 $person.get_id(), $name_variant.get_name(), $ss_name)
            <a href="$delete" class="actions">$_('delete')</a>
        </div>
        <em>$name_variant.get_description():</em> $name.get_name()
        #if $ss
        <br />
        <em>$_("Source system"):</em> $ss.get_name() ($ss.get_description())
        #end if
    </div>
    #end if
#end for
</div>
#end if
#end def

#def set($person, $transaction)
<div class="view_add" id="name_form" style="display:none;">
<a name="name" />
<form action="add_name" method="POST">
    #set $name_types = $transaction.get_name_type_searcher().search()
    #set $name_types = [(i.get_name(), i.get_description()) for i in $name_types]
    <h3>$_('Set a name')</h3>
    <input type="hidden" name="id" value="$person.get_id()" />
    $form_widgets.input("name", "Name")
    $form_widgets.generate_loption("name_type", "Name type", $name_types)
    <input type="submit" value="$_('Set name')" />
    <input type="button" value="$_('Cancel')" id="name_cancel" />
</form>
</div>
#end def

