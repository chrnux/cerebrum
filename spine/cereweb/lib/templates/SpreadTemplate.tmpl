    #set id = $entity.get_id()
    <h2>$_("Spreads:")</h2>
    #for $spread in $spreads
    <div class="name">
        <div class="actions">
            #set $name = $spread.get_name()
            $name - $spread.get_description() 
            <a href="/entity/remove_spread?id=$id&spread=$name">$_("Remove")</a>
