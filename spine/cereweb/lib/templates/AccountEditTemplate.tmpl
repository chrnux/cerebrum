#def edit($account, $groups, $shells)
<div class="edit">
    <form action="$getAction()" method="post">
        <div class="editform">
            $input("name", "Name")
            $input("expire_date", "Expire date *")
            #if $account.is_posix()
                $input("uid", "UID")
                $generate_option("primary_group", "Primary group", $groups)
                $input("gecos", "Gecos")
                $generate_option("shell", "Shell", $shells)
            #end if
            $input("description", "Description")
            <input type="hidden" name="id" value="$account.get_id()" />
        </div>
        $form_widgets.showHelp($help)
        <div>
            <center>
                <input type="submit" value="$_('Save')" name="submit" />&nbsp;
                <input type="submit" value="$_('Cancel')" name="submit" />
            </center>
        </div>
    </form>
</div>
