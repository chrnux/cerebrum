##
## Makefile for htdocs/login/
##
SHELL = @SHELL@
INSTALL = @INSTALL@

prefix = @prefix@
libdir = @libdir@
webroot = @webroot@

sources = $(wildcard *.py)

.PHONY: all install install-lib clean distclean print

all: 

print:
	@echo Sources
	@echo $(sources)

install-lib:

install: $(sources) htaccess
	$(INSTALL) -d $(DESTDIR)/$(webroot)/login
	$(INSTALL) -v -m 644 $(sources) $(DESTDIR)/$(webroot)/login
	$(INSTALL) -v -m 644 htaccess $(DESTDIR)/$(webroot)/login/.htaccess

clean:
	rm -f *~ 

distclean: clean
	rm -f Makefile
