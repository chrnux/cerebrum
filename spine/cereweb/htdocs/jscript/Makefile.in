##
## Makefile for Cheetah-based javascripts (js)
##
SHELL = @SHELL@
INSTALL = @INSTALL@
CHEETAH = @CHEETAH@

prefix = @prefix@
libdir = @libdir@
webroot = @webroot@
jsdir = $(webroot)/jscript

sources = $(wildcard *.js)

.PHONY: all install clean distclean print

all: $(javascripts)

install: $(sources)
	$(INSTALL) -d $(DESTDIR)/$(jsdir)
	$(INSTALL) -v -m 644 $(sources) $(DESTDIR)/$(jsdir)
	$(INSTALL) -v -m 644 htaccess $(DESTDIR)/$(jsdir)/.htaccess

clean:
	rm -f *~ 
	rm -f $(backups)

distclean: clean
	rm -f Makefile
