## Main title on the all pages.
div.title {
    color: black;
    background-color: white;
    overflow: visible;
    border-bottom: 1px solid gray;
    margin-bottom: 0.7em;
    padding-left: 5px;
    width: 500px;
}

div.title h1 {
    margin: 0.1em;
}

## Styles for searchpages.
div.searchtitle {
    border-bottom: 1px solid gray;
    padding-left: 10px;
    margin-bottom: 0.5em;
    width: 440px;
}

div.searchtitle h3 {
    margin: 0;
}

div.search {
    background: #d9e2ef;
    border: 1px solid black;
    color: black;
    width: 500px;
    font-size: 15px;
    margin-bottom: 0.2em;
    text-align: left;
    white-space: normal;
}   

div.search table{
    width: 100%;
}

div.search div.help {
    border: 1px dotted black;
    padding: 2px;
    margin: 2px;
    margin-bottom: 1em;
    margin-top: 1em;
}

div.search th{
    background: #aac1df;
    color: black;
    padding: 0.3em 0.5em 0.3em 0.5em;
    width: auto;
    font-size: 18px;
    margin-bottom: 0.4em;
    text-align: left;
}

div.searchform table{
    width: auto;
    text-align: left;
}

div.searchform select{
    width: 13em;
}


div.searchform input {
    width: auto;
    margin-bottom: 0.4em;
}

div.searchform label {
    text-align: left;
    font-style: oblique;
    font-weight: bold;

}

div.searchform br {
    clear: left;
}

div.searchform input:focus {
    background: #ffe;
}

div.searchresult {
    empty-cells: show; 
    margin-bottom: 0.5em;
}

div.searchresult th a { color: black; text-decoration: none; }
div.searchresult th a:hover { text-decoration: underline; }
div.searchresult th a:visited { color: black; }
div.searchresult th a.current { color: #06C; }

div.searcherror {
    margin-bottom: 0.5em;
}

div.search_range { padding-left: 1.5em; margin: 1px; font-size: 95%; }
div.search_range a:link { color: blue; text-decoration: underline; }
div.search_range a:visited { color: blue; }
div.search_range a.current { color: black; text-decoration: none; }
div.search_range a:hover { color: blue; text-decoration: none; }
div.search_range a.first, div.search_range a.last { text-decoration: none; }
div.search_range .first, div.search_range .last { font-size: 90%; }

## Styles for view page, like person view etc..
div.view_content {
    max-width: 650px;
}

div.view_content div.view_actions {
    float: right;
    border-width: 1px 0 0 1px;
    border-style: solid;
    border-color: black;
    padding: 0 0 10px 5px;
    background: white;
}

div.view_content div.view_actions h4 {
    margin: 5px 0 0 0;
}

div.tableheader {
    background: #aac1df;
    color: black;
    padding: 0.3em 0.5em 0.3em 0.5em;
    width: auto;
    font-size: 18px;
    margin-bottom: 0.4em;
    text-align: left;
}

div.td_lead_info{
    padding: 0 0.5em 0 0.5em;
    width: auto;
    border-bottom: 1px dashed grey;
    font-style: oblique;
    font-weight: bold;
}

div.td_passwd_info {
    padding: 0 0.5em 0 0.5em;
    width: auto;
    font-style: oblique;
    font-weight: bold;
}

div.view_content div.notice {
    font-weight: bold;
    color: #f00;
    text-align: center;
    padding: 5px;
    font-size: 125%;
}

div.page_menu {
    background: #aac1df;
    border: 1px solid grey;
    color: black;
    /* background: #d9e2ef; */
}

## Styles for create pages, like create person etc..
div.create {
    background: #d9e2ef;
    border: 1px solid black;
    color: black;
    width: 500px;
    font-size: 15px;
    margin-bottom: 0.2em;
    text-align: left;
    white-space: normal;
    padding-left: 1em;
}

div.create table {
    width: 100%;
}

div.create th{
    background: #aac1df;
    color: black;
    padding: 0.3em 0.5em 0.3em 0.5em;
    width: auto;
    font-size: 18px;
    margin-bottom: 0.4em;
    text-align: left;
}

div.create div.help {
    border: 1px dotted black;
    padding: 2px;
    margin: 2px;
    margin-bottom: 1em;
    margin-top: 1em;
}

div.createform {
    padding-left: 1em;
}

div.createform label {
    font-style: oblique;
    font-weight: bold;
    margin-right: 0.5em;
    text-align: left;
    float: left;
    width: 6em;
}

div.cssform label {
    float: left;
    width: 10em;
}

div.createform input, div.createform textarea {
    width: auto;
    margin-bottom: 0.4em;
}

div.createform select {
    width: 12em;
    margin-bottom: 0.4em;
}

div.createform div.radio input {
    width: auto;
    float: none;
}

div.createform div.radio {
    margin-left: 10em;
}

div.createform br {
    clear: left;
}

div.createform input.join {
    width: auto;
    float: none;
}

div.createform input:focus, div.createform textarea:focus {
    background: #ffe;
}

## Styles for edit pages, like person edit etc..
div.edit {
    display: block;
    width: 25em;
}

div.editform label, div.editform input, div.editform select, div.editform textarea {
    width: 12em;
    float: left;
    margin-bottom: 0.4em;
}

div.editform label {
    text-align: right;
    width: 11em;
    padding-right: 12px;
}

div.editform br {
    clear: left;
}

div.editform input:focus, div.editform textarea:focus {
    background: #ffe;
}

div.edit div.help {
    border: 1px dotted black;
    padding: 2px;
    margin: 2px;
    margin-bottom: 0.5em;
}

div.edit h3 { margin: 0; }

## A generic floating box for page contents.
div.box {
    width: 100%;
    float: left;
    clear: both;
    margin: 10px 10px 10px 0;
    border: 1px solid;
}
div.box h3 {
    margin: 0;
    padding: 0 5px 0 5px;
    font-size: 105%;
}
div.box h4 {
    margin: 0;
}
div.box form {
    margin: 0;
}
div.box input {
    font-size: 80%;
    margin-top: 2px;
}
div.box span.extra {
    font-size: 90%;
    color: gray;
}
div.box span.name {
    font-weight: bold;
}
div.box span.value {
}
div.box span.date {
    font-size: 85%;
}
div.box div.item {
    padding: 2px;
    border-bottom: 1px dashed;
}
div.box div.description {
    white-space: normal;
    padding-left: 2em;
}
div.box div.actions a {
    color: blue;
    white-space: nowrap;
    margin-bottom: 0.1em;
    padding-right: 0.2em;
    text-align: center;
    text-decoration: none;
}
div.box div.actions {
    float: right;
}

div.box a:hover { color: gray; }
div.box h3 a { color: black; text-decoration: none; }

## Style action-links
a.action:before { content: "["; }
a.action:after { content: "]"; }

## The bluish-colored boxes used for most stuff.
div.info {
    background: #eff;
    border-color: #bdf;
}
div.info h3 {
    background: #bdf;
}
div.info div.item {
    border-bottom-color: #bdf;
}
 
## The yellow box for notes in entities.
div.note {
    background: #ffc;
    border-background: #dda;
}

div.note h3 {
    background: #dda;
}

div.note div.item {
    border-bottom-style: dashed;
    border-bottom-color: #dda;
}

## The reddish-colored boxes used for quarantines.
div.important {
    background: #cba;
    border-color: #da9;
}
div.important h3 {
    background: #da9;
}
div.important div.item {
    border-color: #da9;
}

## The topmost box on almost all the pages
div.view_info {
    padding: 0;
    clear: none;
    float: none;
    background: #d9e2ef;
    border: 1px solid black;
    color: black;
    width: 500px;
    font-size: 15px;
    margin-bottom: 0.2em;
    text-align: left;
    white-space: normal;
}
div.view_info div.item {
    border-bottom-style: dashed
    border-bottom-color: gray;
}
div.view_info table {
    width: 100%;
}
div.view_info col.name {
    width: 30%;
}
div.view_info tr.even {
    background-color: #d9e2c5;
}
div.view_info tr.odd {
}
div.view_info td.name {
    font-weight: bold;
}
div.view_info td.value {
}

## list boxes and log boxes are a bit different.
div.log,
div.list {
    margin: 10px 0 10px 0;
}

div.list h3 {
    background: #bdf;
    border-top-color: #06C;
    border-bottom-color: #06C;
}
div.log h3 {
    background: #ad9;
    border-top-color: #060;
    border-bottom-color: #060;
}
div.log td, div.activitylog_full td, table.results td, div.memberlists td {
    border-bottom: 1px dotted #aaa;
    padding: 1px 2px 1px 2px;
}

## For the permissions-system.
span.perm_added { color: green; font-size: 12px; }
span.perm_removed { color: red; font-size: 12px; }
table.perm_methods tr.gray { empty-cells: show; background-color: #dadada; }
table.perm_methods th { text-align: left; }
a.perm_all:hover { color: gray; }

div.tree { margin-left: 2em; }

## Box containing form for adding/setting items on view-pages.
div.form {
    margin: 10px 10px 10px 0;
}

div.form h3 {
    margin: 0px;
    background: #bde;
}

div.form input:focus,
div.form textarea:focus {
    background: #ffe;
}

## Styles for email pages.
## div.email_view form { margin: 0; }
## div.email_view h2 { margin: 1em 0 0 0; }
div.email_view {
    background: #d9e2ef;
    border: 1px solid black;
    color: black;
    width: 500px;
    font-size: 15px;
    margin-bottom: 0.2em;
    text-align: left;
    white-space: normal; 
}

div.email_view select {
    width: 13em;
}

div.email_view table {
    width: 100%;
}

div.td_email_view {
    padding: 0 0.5em 0 0.5em;
    width: auto;
    font-style: oblique;
    font-weight: bold;
}

## Styles for the Error-pages.
div.errorpage { margin: 5px; }

div.errorpage div.title {
    margin-bottom: 5px;
    padding: 10px;
    border: 1px dotted black;
    background: red;
    font-size: 24px;
}

div.errorpage div.message, div.errorpage div.contact {
    margin-bottom: 5px;
    padding: 5px;
}

div.errorpage div.contact {
    margin-bottom: 5px;
    padding: 5px;
}

div.errorpage div.bottom {
    padding: 0 5px 0 5px;
}

div.errorpage div.report, div.errorpage div.traceback {
    margin: 5px 0 5px 0;
}
div.errorpage div.report form {
    margin: 0;
}

div.errorpage div.traceback pre {
    margin: 0;
    font-size: 12px;
}

## Styles for the session warning box on top of all pages.
div.session_warning {
    border: 1px dotted black;
    padding: 8px;
    font-size: 16px;
    background: #FFFF80;
    width: 500px;
    overflow: visible;
}

## Styles for message of today on index-page.
div.motd {
    width: 450px;
    margin-bottom: 1em;
}

div.motd div.subject {
    font-weight: bold;
    border-bottom: 1px solid black;
    padding-left: 10px;
    width: auto;
    font-size: 110%;
}

div.motd span.by {
    padding-left: 5px;
    font-size: 90%;
    font-style: italic;
}

div.motd span.when {
    font-size: 80%;
    margin-left: 5px;
}

div.motd_edit input, div.motd_edit textarea {
    font-size: 70%;
}

div.motd_edit input:focus, div.motd_edit textarea:focus {
    background: #ffe;
}

## Styles for options-page.
div.options form {
    margin: 0;
}

div.options th {
    border-bottom: 1px solid black;
    padding-left: 10px;
    font-size: 125%;
}

div.options td {
    padding-right: 5px;
}

div.options td.shelp {
    font-style: italic;
    font-size: 95%;
    padding: 1px 0 5px 5px;
}

div.options td.buttons {
    padding-top: 0.8em;
}

div.options input:focus {
    background: #ffe;
}

