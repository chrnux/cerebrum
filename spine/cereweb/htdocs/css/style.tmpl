## Styles for searchpages.
div.searchtitle {
    border-bottom: 1px solid gray;
    padding-left: 10px;
    margin-bottom: 0.5em;
    width: 440px;
}

div.searchtitle h3 {
    margin: 0;
}

div.search {
    display: block;
    width: 23em;
}

div.searchform label, div.searchform input {
    width: 12em;
    float: left;
    margin-bottom: 0.4em;
}

div.searchform label {
    text-align: right;
    width: 9em;
    padding-right: 12px;
}

div.searchform br {
    clear: left;
}

div.searchform input:focus {
    background: #ffe;
}

div.search div.help {
    border: 1px dotted black;
    padding: 2px;
    margin: 2px;
    margin-bottom: 0.5em;
}

div.searchresult {
    empty-cells: show; 
    margin-bottom: 0.5em;
}

div.searchresult th a { color: black; text-decoration: none; }
div.searchresult th a:hover { text-decoration: underline; }
div.searchresult th a:visited { color: black; }
div.searchresult th a.current { color: #06C; }

div.searcherror {
    margin-bottom: 0.5em;
}

div.search_range { padding-left: 1.5em; margin: 1px; font-size: 95%; }
div.search_range a:link { color: blue; text-decoration: underline; }
div.search_range a:visited { color: blue; }
div.search_range a.current { color: black; text-decoration: none; }
div.search_range a:hover { color: blue; text-decoration: none; }
div.search_range a.first, div.search_range a.last { text-decoration: none; }
div.search_range .first, div.search_range .last { font-size: 90%; }

