## Method wich fixes some problems on diffrent browers
#def shrink($name)
html>body $name {
    /* display: table; /* Breaks konqueror */
	color: black;
    width: auto;
}
$name {
    white-space:nowrap; /* to force width */
    width:20px;/* rumor is IE should auto-expand  -- doesn't appear true? */
}
#end def

## Creates a standard content-box for view-pages.
#def view_box($name, $body_color, $header_color, $content_name='')
$shrink($name)

$name {
    margin: 10px 10px 10px 0;
    background: $body_color;
    border: 1px solid $header_color;
}

$name h3 {
    margin: 0;
    padding: 0 5px 0 5px;
    background: $header_color;
    font-size: 105%;
}
#if $content_name

$name $content_name {
    border-bottom: 1px dashed $header_color;
    padding: 2px;
}
#end if
#end def

## Creates a standard header-box for view-pages.
#def view_header($name, $color, $border_color)
$shrink($name)
$name { margin: 10px 0 10px 0; }
$name h3 {
    margin: 0;
    padding: 0 5px 0 5px;
    background: $color;
    border-top: 1px solid $border_color;
    border-bottom: 1px solid $border_color;
    font-size: 105%;
}
#end def

