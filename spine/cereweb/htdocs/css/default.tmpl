## Styles for the bottom frame, wich contains worklist, transactions and activitylog.
## IE doesnt support inline-block on divs, so I had to use spans instead, and then
## i had to use vertical-align: top, to make it look just like in opera.
div.bottom_div {
    background: white;
    height: 100%;
    height: 9em;
}

div.worklist h2, div.activitylog h2 {
    font-family: "Lucida Grande", Verdana, Lucida, Helvetica, Arial, sans-serif;
    font-size: 90%;
    margin: 0;
    padding: 0 0 0 4px;
}

## Styles for the worklist.
div.worklist {
    float: left;
    vertical-align: top;
    margin-left: 0.5em;
    margin-right: 0.5em;
    height: auto;
    width: auto;
}

div.worklist h2 {
    background: #66CCFF;
    border: 1px solid #0066CC;
    margin-bottom: 4px;
}

div.worklist form {
    margin: 0; // Ie and opera adds a small margin.
}

#wl_list {
    display: table-cell; /* For firefox and Opera */ 
    display: inline-block; /* For Opera and ie */ 
    vertical-align: top; /* For ie */
    float:left;
}

#wl_list select:focus {
    background: #ffe;
}

#wl_buttons {
    display: table-cell; /* For firefox and Opera */ 
    display: inline-block; /* For Opera and ie */ 
    vertical-align: top; /* For ie */
    float:left;
}

#wl_buttons input {
    width: 4.5em;
    font-size: 80%;
    font-family: sans-serif;
    margin: 0px 5px 4px 5px;
}

#wl_actions {
    display: table-cell; /* For firefox and Opera */ 
    display: inline-block; /* For Opera and ie */ 
    vertical-align: top; /* For ie */
    margin: 0 0 0 4px;
    float:left;
}

#wl_actions div.wl_action {
    width: 180px;
}

#wl_actions div.wl_action div.header {
    border: 1px solid #0099FF;
    font-family: "Lucida Grande", Verdana, Lucida, Helvetica, Arial, sans-serif;
    font-weight: bold;
    font-size: 85%;
    padding: 2px;
}

#wl_actions div.wl_action div.content {
    font-size: 87%;
    padding: 4px;
}

#wl_actions div.wl_errors h3 { color: red; }

## Styles for the Activity log.
div.activitylog {
    vertical-align: top;
    margin-left: 0.5em;
    margin-right: 0.5em;
    overflow: auto;
    height: auto;
    width: 350px;
}

div.activitylog_full {
    float: left;
    clear: right;
    empty-cells: show;
}

div.activitylog h2 {
    background: #61EF76;
    border: 1px solid #006600;
    margin-bottom: 4px;
}

div.activitylog div.amsg, div.activitylog_full div.amsg {
    border-bottom: 1px dotted #006600;
}

div.activitylog a:link {  color: black; }
div.activitylog a:visited { color: black; }
div.activitylog a:hover { color: gray; }
div.activitylog h2 a:link { text-decoration: none; }
div.activitylog h2 a:hover { text-decoration: none; }
div.activitylog h2 a:visited { text-decoration: none; }
