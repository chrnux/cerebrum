## Styles for the bottom frame, wich contains worklist, transactions and activitylog.
## IE doesnt support inline-block on divs, so I had to use spans instead, and then
## i had to use vertical-align: top, to make it look just like in opera.
div.bottom h2, div.bottom h3 {
    font-size: 80%;
    margin: 0;
    padding: 0;
    letter-spacing: 0.2em;
}

## Styles for the worklist.
div.worklist {
    display: inline-block;
    margin-right: 0.5em;
    vertical-align: top;
    border-top: 2px solid #9ab;
    border-left: 2px solid #9ab;
    height: 100%;
}

div.worklist h2 {
    background: #9ab;
    margin-bottom: 4px;
}

div.worklist form {
    margin: 0; // Ie and opera adds a small margin.
}

div.worklist span.list {
    display: table-cell; /* For firefox and Opera */ 
    display: inline-block; /* For Opera and ie */ 
    vertical-align: top; /* For ie */
}

div.worklist span.list select:focus {
    background: #ffe;
}

div.worklist span.buttons {
    display: table-cell; /* For firefox and Opera */ 
    display: inline-block; /* For Opera and ie */ 
    vertical-align: top; /* For ie */
}

div.worklist span.buttons input {
    width: 4em;
    font-size: 80%;
    font-family: sans-serif;
    margin: 0px 5px 4px 5px;
}

div.worklist span.actions {
    display: table-cell; /* For firefox and Opera */ 
    display: inline-block; /* For Opera and ie */ 
    vertical-align: top; /* For ie */
    margin: 0px 0px 0px 4px;
}

div.worklist span.actions div.wl_errors h3 {
    color: red;
}

div.worklist span.actions div.wl_action {
    width: 200px;
    background: #9ac;
}

div.worklist span.actions div.wl_action div.header {
    font-weight: bold;
    font-size: 100%;
    padding: 2px;
    border: 1px solid black;
}

div.worklist span.actions div.wl_action div.links {
    font-size: 80%;
}

div.worklist span.actions div.wl_action div.content {
    font-size: 90%;
    padding: 4px;
    border: 1px dotted black;
    border-top: 0px;
}

## ActivityLog
div.activitylog {
    display: inline-block;
    width: 19em;
    vertical-align: top;
    overflow: auto;
}

div.activitylog h2 {
    background: #999;
}

## Styles for the menu:
div.menu a { top: 10px; left: 10px; }
div.menu a { display: block; }

div.menu a:link  {  color: black; text-decoration : none; }
div.menu a:visited { color: black;  text-decoration : none; }
div.menu a:hover { color: #999999; text-decoration : none; }
div.menu a:active { text-decoration : none; }

div.menu {
    border: none;
}

div.menulevel1 {
    font-weight: bold;
}

div.menulevel2 {
    font-weight: normal;
    padding-left: 1.5em;
}

div.menu .active {
    font-style: italic;
}

## Styles for messages and errors
div.messages {
    border: black 1px dashed;
}

div.error {
    background: #f66;
    padding: 0.3em;
}

