#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

PREFIX=$(CURDIR)/debian/cerebrum-ntnu/usr
CONFDIR=$(CURDIR)/debian/cerebrum-ntnu/etc
WEBROOT=$(CURDIR)/debian/cerebrum-ntnu/usr/lib/cereweb
LOCALSTATEDIR=$(CURDIR)/var
DDLDIR=$(CURDIR)/debian/cerebrum-ntnu/usr/share/cerebrum/design
# Skulle vaert i cerebrum-ntnu, men configurescriptet ignorerer --docdir
DOCDIR=$(PREFIX)/share/doc/cerebrum

configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.

	aclocal
	autoconf
	# setup.py har teite, hardkodede pather. Patcher inn quickfix
	patch -p1 < debian/setup.py_path.patch
	# makefila stoetter ikke DESTDIR :-(
	./configure --prefix=$(PREFIX) --sysconfdir=$(CONFDIR) --localstatedir=$(LOCALSTATEDIR) --docdir=$(DOCDIR) --with-webroot=$(WEBROOT) --disable-bofh

	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp 
	dh_testdir

	# Add here commands to compile the package.
	$(MAKE)
	#docbook-to-man debian/cerebrum-ntnu.sgml > cerebrum-ntnu.1
	$(MAKE) -C spine

	# Denne er her fordi makefilene vaare suger og ikke stoetter DESTDIRT,
	# saa vi herper alt ved aa bruke --prefix i steden. Saa maa vi rydde
	# etter oss igjen her.
	sed 's,/home/local/[^/]*/[^/]*/debian/cerebrum-ntnu,,' -i ./spine/cereweb/config.py

	# Vekk med .pyc-filene, de genereres av postinst-scriptet
	find . -name '*.pyc' -or -name '*.pyo' -delete

	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	# Add here commands to clean up after the build process.
	-$(MAKE) -C spine clean
	-$(MAKE) clean
	-find . -name Makefile -delete
	-rm spine/ceresync/config.py spine/cereweb/config.py cerebrum_path.py aclocal.m4 config.log
	-rm configure config.status Cerebrum/__init__.pyc
	# Fjern patchene som ble applyet rett foer configure
	-patch -u -N -R -p1 < debian/setup.py_path.patch
	-find . -name '*.rej' -exec rm {} +
	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	# Add here commands to install the package into debian/cerebrum-ntnu.
	#$(MAKE) DESTDIR=$(CURDIR)/debian/cerebrum-ntnu install
	$(MAKE) install
	$(MAKE) -C spine install

	# Flytt design-katalogen til /usr/share/cerebrum
	## mkdir -p `dirname $(DDLDIR)`
	## mv $(DOCDIR)/design $(DDLDIR)

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
	dh_pysupport $(WEBROOT)
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
