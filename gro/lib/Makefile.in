##
## Makefile for gro/lib
##
INSTALL = @INSTALL@

pythondir = @PYTHONDIR@/Cerebrum/gro

sources = $(wildcard *.py)

.PHONY: all install install-lib clean distclean print

all: 
	$(MAKE) -C idl $@
	$(MAKE) -C classes $@

install: install-lib
	$(MAKE) -C idl $@
	$(MAKE) -C classes $@

install-lib: $(sources)
	@for file in $(sources); do \
	  $(INSTALL) -D -v -m 644 $$file $(DESTDIR)/$(pythondir)/$$file || exit 1; \
	done
	touch $(DESTDIR)/$(pythondir)/__init__.py
	chmod 644 $(DESTDIR)/$(pythondir)/__init__.py

clean:
	rm -f *~ 
	$(MAKE) -C idl $@

distclean: clean
	rm -f Makefile
	$(MAKE) -C idl $@
