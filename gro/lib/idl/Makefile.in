INSTALL = @INSTALL@
OMNIIDL = omniidl #FIXME denne må bli generert med configure

pythondir = @PYTHONDIR@

sources = $(wildcard *.idl)
objdir = Cerebrum/gro
objects = $(objdir)/errors_idl.py \
		  $(objdir)/gro_idl.py \
		  $(objdir)/Cerebrum_core/__init__.py \
		  $(objdir)/Cerebrum_core/Errors/__init__.py \
		  $(objdir)/Cerebrum_core__POA/__init__.py \
		  $(objdir)/Cerebrum_core__POA/Errors/__init__.py

.PHONY: all install install-lib clean distclean print

#TODO: Plukk idl-kompilator fra cereconf (eller annet lurt sted)
Cerebrum/gro: $(sources)
	rm -rf Cerebrum
	omniidl -bpython -Wbpackage=Cerebrum.gro $(sources)

all: Cerebrum/gro

print:
	@echo Sources
	@echo $(sources)

install: install-lib

install-lib: $(sources)
	@for file in $(objects); do \
	  $(INSTALL) -D -v -m 644 $$file $(DESTDIR)/$(pythondir)/$$file || exit 1; \
	done


clean:
	rm -rf Cerebrum

distclean: clean
	rm -f Makefile
