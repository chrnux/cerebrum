##
## Makefile for Cereweb
##


.PHONY: all install install-lib clean distclean

all: 
	$(MAKE) -C htdocs $@
	$(MAKE) -C lib $@

install: install-lib
	$(MAKE) -C htdocs $@
	$(MAKE) -C lib $@

install-lib: $(sources)
	$(MAKE) -C htdocs $@
	$(MAKE) -C lib $@

clean:
	$(MAKE) -C htdocs $@
	$(MAKE) -C lib $@

distclean: clean
	$(MAKE) -C htdocs $@
	$(MAKE) -C lib $@
