## Main template
## Gives a 'frames style' left menu and a bottom area
## 

#from Cerebrum.web.InitTemplate import InitTemplate
#extends InitTemplate
#implements respond
#from Cerebrum.web.utils import url

#attr $title = "Cereweb"
#attr $messages = []
##
<?xml version='1.0' ?>
<!DOCTYPE HTML PUBLIC
"-//W3C//DTD HTML 4.01//EN"
><html lang="en">
<head>
<title>Cereweb $title</title>
#def css($name)
#set css = url("css/" + $name)
    <link rel="stylesheet" type="text/css" href="$css" />
#end def
$css("fixed.css")    
    <!--[if IE]>
$css("fixed_ie5.css")    
    <![endif]-->
$css("default.css")    
$css("style.css")    
</head><body>
<div class="content">
<h1>$title</h1>

#def viewMessages
<div class="messages">
#for $message, $is_error in $messages
#set $error = $is_error and " error" or ""
  <div class="message$error">
    $message
  </div>
#end for
</div>
#end def


#if $messages
$viewMessages()
#end if

#def content
Her er mr. Content
#end def content
$content()

</div>


<div class="menu">
#def menu
Dette er menyen <br />
[Viktig] <br />
[Uviktig] <br />
[Hjelp] <br />
#end def menu
$menu()
</div>


<div class="bottom">
#def bottom
Dette er bunnen!!!11
#end def bottom
$bottom()
</div>


</body>
</html>
