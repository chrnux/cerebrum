div.activitylog h2,div.worklist h2 {
  font-size: 90%;
  margin: 0;
  padding: 0;
  background: #9ab;
}
div.activitylog {
  overflow: auto;
  height: 5em;
  width: 25em;
  padding: 0;
  margin: 0;
  margin-left: 2em;
}
div.worklist {
  width: 18em;
  float: left;
  /*margin-right: 2em;*/
}
div.buttons{
  text-align: left;
}
div.buttons input {
  width: 5em;
  margin-top: 0.3em;
  margin-left: 0.3em;
}

div.menu a { top: 10px; left: 10px; }
div.menu a { display: block; }

div.menu a:link  {  color: black; text-decoration : none; }
div.menu a:visited { color: black;  text-decoration : none; }
div.menu a:hover { color: #999999; text-decoration : none; }
div.menu a:active { text-decoration : none; }

div.menu {
    border: none;
}

div.menulevel1 {
    font-weight: bold;
}

div.menulevel2 {
    font-weight: normal;
    padding-left: 1.5em;
}

div.menu .active {
    font-style: italic;
}
div.messages {
    border: black 1px dashed;
}

div.error {
    background: #f66;
    padding: 0.3em;
}

