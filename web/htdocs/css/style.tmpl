div.notes {
    /*display: table;*/
    display: table;
    background: #ffc;
    border-left: 1px solid #dda;
    border-right: 1px solid #dda;
    border-bottom: 1px solid #dda;
    border-collapse: collapse;
    margin-bottom: 1em;
    padding: 0.3em;
}
div.notes h2 {
    margin: 0;
    padding: 0;
    background: #dda;
    font-size: 100%;
}
div.notes input, div.notes textarea {
    font-size: 80%;
    font-family: sans-serif;
}
div.notes form h3 {
    font-size: 100%;
}
div.notes label {
    display: block;
    font-size: 80%;
}
div.note {
    border-bottom: 1px dashed #dda;
}
div.quarantines {
    float: right;
    background: #cba;
    font-size: 80%;
}
div.quarantines h2 {
    margin: 0;
    padding: 0;
    background: #da9;
    font-size: 125%;
}
div.quarantines td {
    padding: 0.2em;
}

div.accounts {
    display: table;
}
div.accounts h2 {
    margin: 0;
    padding: 0;
    background: #abc;
    font-size: 100%;
}

div.account {
    display: table;
    font-size: 90%;
    margin-top: 0.5em;
    margin-bottom: 0.5em;
    border-bottom: #eef 2px dotted;
}
div.account h2 {
    background: #eef;
    font-size: 100%;
    margin-bottom: 0;
}
div.accounts div.create {
    font-size: 80%;
    background: #cde;
    display: table;
    padding-bottom: 0.5em;
    margin-top: 0.5em;
}
div.accounts div.create h3 {
    background: #abc;
    margin: 0;
    font-size: 100%;
    padding-left: 1em;
}
div.accounts div.create form {
    padding-left: 1em;
    padding-right: 1em;
}
div.accounts div.create label {
    display: block;
}
div.accounts div.create input {
    font-size: 80%;
    padding: 0;
}

div.info dd {
    margin-left: 0;
    padding-left: 0;
}
div.info dt {
    font-weight: bold;
}
div.actions {
    margin-bottom: 0.5em;     
}
div.actions a {
    padding-right: 0.5em;    
    white-space: nowrap;
}
div.actions a:before {
    content: "[";
}
div.actions a:after {
    content: "]";
}

div.historylog {
    display: table;
}

div.historylog h2 {
    margin: 0;
    padding: 0;
    background: #ad9;
    font-size: 100%;
}

div.historylog td {
    border-bottom: 1px dotted #aaa;
}
